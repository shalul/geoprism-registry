{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		],
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"types": [
			"node",
			"jasmine"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"baseUrl": "src",
		"paths": {
			"@shared/*": [
				"app/shared/*"
			],
			"@registry/*": [
				"app/registry/*"
			],
			"@core/*": [
				"app/core/*"
			],
			"@admin/*": [
				"app/admin/*"
			]
		}
	},
	"exclude": [
		"node_modules/*",
		"aot/*"
	]
}