  <doIt>
    <create>
      <mdBusiness name="net.geoprism.registry.LabeledPropertyGraphType" label="Graph Type" generateController="false" publish="false">
        <attributes>
          <localChar name="displayLabel" label="Label" required="true" />
          <localText name="description"/>          
          <char name="code" label="Code" size="255" required="true" indexType="unique index" />
          <text name="types" label="Types" />
          <text name="hierarchies" label="Hierarchies" />
          <boolean name="valid" label="Valid" />
          <char name="strategyType" label="Strategy Type" size="255" required="true" />          
          <text name="strategyConfiguration" label="Strategy Configuration" />          
        </attributes>
          <mdMethod name="createEntry" label="createEntry" static="false" returnType="net.geoprism.registry.LabeledPropertyGraphTypeEntry">
            <mdParameter name="forDate" label="forDate" order="0" type="java.util.Date" />
          </mdMethod>        
      </mdBusiness>
      <mdBusiness name="net.geoprism.registry.SingleLabeledPropertyGraphType" extends="net.geoprism.registry.LabeledPropertyGraphType" label="Single Graph Type" generateController="false">
        <attributes>
          <dateTime name="validOn" label="Valid On" />          
        </attributes>
      </mdBusiness>
      <mdBusiness name="net.geoprism.registry.IncrementalLabeledPropertyGraphType" extends="net.geoprism.registry.LabeledPropertyGraphType" label="Incremental Graph Type" generateController="false">
        <attributes>
          <enumeration name="frequency" label="Publishing frequency" required="false" type="net.geoprism.registry.ChangeFrequency" immutable="false" selectMultiple="false" />
          <dateTime name="publishingStartDate" label="Publishing start date" />          
        </attributes>
      </mdBusiness>
      <mdBusiness name="net.geoprism.registry.IntervalLabeledPropertyGraphType" extends="net.geoprism.registry.LabeledPropertyGraphType" label="Interval Graph Type" generateController="false">
        <attributes>
          <text name="intervalJson" label="Interval" />          
        </attributes>
      </mdBusiness>
      <mdBusiness name="net.geoprism.registry.LabeledPropertyGraphTypeEntry" label="List Entry" generateController="false">
        <attributes>
          <reference name="graphType" type="net.geoprism.registry.LabeledPropertyGraphType" required="true" label="Graph Type" />
          <dateTime name="forDate" label="For Date" required="true" immutable="true" />
        </attributes> 
        <mdMethod name="publish" label="publish" static="false" returnType="java.lang.String">
        </mdMethod>        
      </mdBusiness>
      <mdBusiness name="net.geoprism.registry.LabeledPropertyGraphTypeVersion" label="Entry Version" generateController="false">
        <attributes>
          <reference name="graphType" type="net.geoprism.registry.LabeledPropertyGraphType" required="true" label="Graph Type" />        
          <reference name="entry" type="net.geoprism.registry.LabeledPropertyGraphTypeEntry" required="true" label="Graph Entry" />
          <dateTime name="forDate" label="For Date" required="true" immutable="true" />
          <date name="publishDate" label="Publish Date" />
          <integer name="versionNumber" label="Version Number" required="true" />
        </attributes> 
        <mdMethod name="publish" label="publish" static="false" returnType="java.lang.String" />        
        <mdMethod name="remove" label="publish" static="false" returnType="void" />        
      </mdBusiness>
      
      <mdBusiness name="net.geoprism.registry.HierarchyTypeSnapshot" label="Hierarchy Type Snapshot" generateController="false" publish="false">
        <attributes>
          <char name="code" label="Code" size="255" required="true" />
          <localChar name="displayLabel" label="Label" required="true" />
          <localText name="description"/>          
          <text name="progress" label="progress" />
          <text name="acknowledgement" label="Acknowledgement" />
          <text name="disclaimer" label="Disclaimer" />
          <text name="accessConstraints" label="Access Constraints" />
          <text name="useConstraints" label="Use Constraints" />
          <text name="superHierarchy" label="Super Hierarchy" />
		  <reference name="graphMdEdge" type="com.runwaysdk.system.metadata.MdEdge" required="true" label="MdEdge" />
          <reference name="version" type="net.geoprism.registry.LabeledPropertyGraphTypeVersion" required="true" label="Version" />                          
        </attributes>
      </mdBusiness>      
      
      <mdBusiness name="net.geoprism.registry.GeoObjectTypeSnapshot" label="Geo-Object Type Snapshot" generateController="false" publish="false">
        <attributes>
          <char name="code" label="Code" size="255" required="true" />
          <localChar name="displayLabel" label="Label" required="true" />
          <localText name="description"/>          
          <text name="geometryType" label="Geometry Type" />
          <boolean name="isPrivate" label="Is Private" />          
          <boolean name="isGeometryEditable" label="Is Geometry Editable" />          
          <reference name="graphMdVertex" type="com.runwaysdk.system.metadata.MdVertex" required="true" label="MdVertex" />
          <reference name="version" type="net.geoprism.registry.LabeledPropertyGraphTypeVersion" required="true" label="Version" />                
        </attributes>
      </mdBusiness>      
      
      <mdBusiness name="net.geoprism.registry.etl.PublishLabeledPropertyGraphTypeVersionJob" extends="com.runwaysdk.system.scheduler.ExecutableJob" exported="false">
        <attributes>
          <reference name="graphType" type="net.geoprism.registry.LabeledPropertyGraphType" required="true" label="Graph Type" />                
          <reference name="version" type="net.geoprism.registry.LabeledPropertyGraphTypeVersion" label="Graph Type Version" required="true"/>
        </attributes>
      </mdBusiness>
        
    </create>
