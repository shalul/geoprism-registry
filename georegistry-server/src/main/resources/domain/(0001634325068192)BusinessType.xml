<version
  xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdBusiness
        name="net.geoprism.registry.BusinessType"
        label="Business Type"
        generateController="false"
        cacheAlgorithm="everything">
        <attributes>
          <char
            name="code"
            size="32"
            required="true"
            indexType="unique index"
            label="Code" />
          <reference
            name="mdVertex"
            type="com.runwaysdk.system.metadata.MdVertex"
            required="true"
            label="MdVertex" />
          <localChar
            name="displayLabel"
            label="Label"
            required="true" />
          <reference
            name="organization"
            label="Organization"
            required="false"
            type="net.geoprism.registry.Organization" />
        </attributes>
      </mdBusiness>
    </create>
    <createOrUpdate>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.types">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.types" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="Business Types" />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.noTypes">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.noTypes" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="There are no business types available for this organization." />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.edit.type">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.edit.type" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="Edit type" />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.view.type">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.view.type" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="View type" />
        </attributeStruct>
      </object>      
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.type">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.type" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="Business Type" />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.import">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.import" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="Import Business Data" />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="business.data.date">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="business.data.date" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="Date" />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="generic.table.to.date">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="generic.table.to.date" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="To YYYY-MM-DD" />
        </attributeStruct>
      </object>
      <object
        type="com.runwaysdk.localization.LocalizedValueStore"
        key="generic.table.from.date">
        <attribute
          name="storeTag"
          value="UIText" />
        <attribute
          name="storeKey"
          value="generic.table.from.date" />
        <attributeStruct name="storeValue">
          <attribute
            name="defaultLocale"
            value="From YYYY-MM-DD" />
        </attributeStruct>
      </object>
      
    </createOrUpdate>    
    <permissions>
      <role roleName="geoprism.admin.Administrator">
        <grant>
          <mdBusinessPermission type="net.geoprism.registry.BusinessType">
            <operation name="ALL" />
          </mdBusinessPermission>
        </grant>
      </role>
      <role roleName="cgr.RegistryMaintainer">
        <grant>
          <mdBusinessPermission type="net.geoprism.registry.BusinessType">
            <operation name="ALL" />
          </mdBusinessPermission>
        </grant>
      </role>
    </permissions>    
  </doIt>
  <undoIt>
    <delete>
      <object
        key="net.geoprism.registry.BusinessType"
        type="com.runwaysdk.system.metadata.MdBusiness"></object>
    </delete>
  </undoIt>
</version>